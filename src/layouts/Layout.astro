---
import "../styles/global.css";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <title>Autoescola Ideal Jales - CNH Rápida e Preço Justo</title>
    <meta
      name="description"
      content="Tire sua carteira de motorista com a Autoescola Ideal em Jales. Preço justo, instrutores qualificados e agendamento fácil."
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,1,0"
      rel="stylesheet"
    />

    <!-- SEO: Schema.org (LocalBusiness) -->
    <script
      type="application/ld+json"
      set:html={`{
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Auto Escola Ideal",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Centro, 2264",
        "addressLocality": "Jales",
        "addressRegion": "SP",
        "postalCode": "15700-000",
        "addressCountry": "BR"
      },
      "url": "https://seusite.com",
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": -20.271587,
        "longitude": -50.5503057
      }
    }`}
    />
  </head>

  <body class="flex flex-col">
    <Navbar client:load />
    <main class="flex flex-col gap-0 bg-white">
      <slot />
      <a
        href="https://wa.me/5517997572900"
        class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-500 text-white shadow-lg hover:shadow-xl hover:bg-green-600 transition-colors duration-300 overflow-hidden z-[9999] fixed right-6 bottom-10 animate-bounce"
        role="button"
        target="_blank"
        aria-label="Fale conosco pelo WhatsApp"
        title="Abrir WhatsApp"
      >
        <img
          src="/icone-whatsapp.jpg"
          alt="WhatsApp"
          class="w-full h-full object-cover"
        />
      </a>
    </main>

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script is:inline src="../javascript/scripts.js"></script>
