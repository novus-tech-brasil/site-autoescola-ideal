---
import Layout from "../layouts/Layout.astro";
import Calculator from "../components/calculator";
---

<Layout>
    <section id="calculadora" class="w-full py-20 bg-neutral-50">
        <div
            class="corpo mx-auto justify-center items-center flex flex-col mt-10 md:mt-20"
        >
            <div class="text-center mb-12 px-8">
                <p
                    class="text-primary font-semibold uppercase tracking-wider mb-2"
                >
                    Simulador de Preços
                </p>
                <h2 class="text-4xl md:text-5xl font-bold text-neutral-800">
                    Monte seu plano ideal
                </h2>
                <p class="text-neutral-500 mt-4 max-w-2xl mx-auto">
                    Use nossa calculadora interativa para descobrir o melhor
                    pacote para você.
                </p>
                <div
                    class="flex w-full px-10 gap-5 py-5 bg-green-600 rounded-md mt-4 animate-pulse justify-between text-white"
                >
                    <p>Arraste para baixo e monte o seu plano!</p>
                    <span class="material-symbols-outlined">
                        arrow_cool_down
                    </span>
                </div>
            </div>

            <div class="p-5 w-full max-w-[1100px] flex flex-col">
                <Calculator client:load />
            </div>
        </div>
    </section>
</Layout>
