---
import Layout from "../layouts/Layout.astro";
import Calculator from "../components/calculator";
---

<Layout>
    <section id="calculadora" class="w-full py-20 bg-neutral-50">
        <div class="corpo mx-auto justify-center items-center flex flex-col mt-10 md:mt-20">
            <div class="text-center mb-12">
                <p
                    class="text-primary font-semibold uppercase tracking-wider mb-2"
                >
                    Simulador de Preços
                </p>
                <h2 class="text-4xl md:text-5xl font-bold text-neutral-800">
                    Monte seu plano ideal
                </h2>
                <p class="text-neutral-500 mt-4 max-w-2xl mx-auto">
                    Use nossa calculadora interativa para descobrir o melhor
                    pacote para você.
                </p>
            </div>

            <div class="p-5 max-w-[1500px]">
                <Calculator client:load />
            </div>
        </div>
    </section>
</Layout>
